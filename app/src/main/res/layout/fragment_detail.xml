<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView"
    android:layout_gravity="center_horizontal"
     >

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
       <TextView
           android:id="@+id/detail_title_txtView"
           android:layout_width="match_parent"
           android:layout_height="100dp"
           android:text="Title"
           android:textAppearance="?android:textAppearanceLarge"
           android:background="#737373"
           android:textColor="#FFFFFF"
           android:gravity="center_vertical|start"
           android:padding="30dp"
           />
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"

           android:orientation="horizontal">
           <ImageView
               android:id="@+id/detail_poster"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/a2"
               android:paddingTop="15dp"
               android:paddingRight="15dp"
               android:paddingBottom="15dp"
               android:paddingLeft="30dp"/>
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical">
               <TextView
                   android:id="@+id/detail_date_year"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="2016"
                   android:textAppearance="?android:textAppearanceLarge"
                   android:paddingTop="15dp"
                   android:textColor="#737373"
                   />
               <TextView
                   android:id="@+id/detail_duration_minutes"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textAppearance="?android:textAppearanceLarge"
                   android:paddingTop="10dp"
                   android:textColor="#737373"
                   />
               <RatingBar
                   android:id="@+id/detail_ratingBar"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:numStars="5"
                   android:max="5"
                   android:rating="0.0"
                   style="?android:attr/ratingBarStyleSmall"
                   />

               <Button
                   android:id="@+id/detail_MARK_AS_FAVORITE_btn"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="15dp"
                   android:maxWidth="50dp"
                   android:minHeight="36dp"
                   android:text="MARK AS FAVORITE"
                   android:textAppearance="?android:textAppearanceSmall"
                   />

           </LinearLayout>
       </LinearLayout>
       <TextView
           android:id="@+id/detail_overView"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Every child into the world full of promise, and none more so than chappie: he is gifted, special, a prodigy chippie is a robot"
           android:textAppearance="?android:textAppearanceLarge"
           android:textColor="#969696"
           android:paddingRight="25dp"
           android:paddingLeft="25dp"
           android:paddingBottom="25dp"

           />
       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="#737373"
           />
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Here goes the Trailer !"
           android:textSize="30dp"/>
   </LinearLayout>

</ScrollView>

